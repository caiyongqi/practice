<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.graduation.practice.dao.CounselorDao">
    <select id="getTotal"  resultType="int">
        select count(*) from t_user
    </select>

    <select id="findAllByPage" parameterType="int" resultType="Student">
        select * from student limit #{start}, #{size}
    </select>

    <select id="findAllStudent" parameterType="User" resultType="Student">
        SELECT * FROM student WHERE classId in (SELECT id FROM classes WHERE disciplineId = (SELECT disciplineId FROM counselor WHERE counselorId = #{account}))
        ORDER BY id
    </select>

    <select id="searchAllStudentById"  parameterType="String" resultType="Student">
        SELECT * FROM student WHERE classId in (SELECT id FROM classes WHERE disciplineId = (SELECT disciplineId FROM counselor WHERE counselorId = #{account}))
        <if test="keyword != null and keyword != ''">
            AND account like concat("%", #{keyword}, "%")
        </if>
        ORDER BY id
    </select>

    <select id="findCounselorByCounselorId" parameterType="Counselor" resultType="Counselor">
        SELECT * FROM counselor WHERE counselorId = #{counselorId}
    </select>
</mapper>