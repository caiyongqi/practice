<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.graduation.practice.dao.StudentToScoreDao">
    <select id="getStudentNumByCourse" parameterType="TeacherToCourse" resultType="Integer">
        SELECT COUNT(DISTINCT studentId) FROM student_to_score WHERE courseId = #{courseId} AND startTime = #{startTime} AND endTime = #{endTime}
    </select>
    <select id="findAllStudentByCourse" parameterType="TeacherToCourse" resultType="StudentToScore">
        SELECT * FROM student_to_score WHERE courseId = #{courseId} AND startTime = #{startTime} AND endTime = #{endTime}
    </select>
    <update id="updateScore" parameterType="List">
        <foreach collection="list" item="item" index="index" open="" close="" separator=";">
            UPDATE student_to_score
            <set>
                <if test="item.score != null">
                    score = #{item.score}
                </if>
            </set>
            WHERE studentId = #{item.studentId}
        </foreach>
    </update>
</mapper>