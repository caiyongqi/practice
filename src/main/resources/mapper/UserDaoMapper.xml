<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.graduation.practice.dao.UserDao">
    <select id="findUserByAccount" parameterType="User" resultType="User">
        SELECT * FROM user WHERE account = #{account}
    </select>
    <select id="findAllAdmin" parameterType="User" resultType="User">
        SELECT * FROM user WHERE TYPE in (1, 2) AND account != #{account}
    </select>
    <insert id="insertUser" parameterType="User">
        INSERT INTO user (account,password,role,type) VALUES (#{account},#{password},#{role},#{type})
    </insert>
</mapper>